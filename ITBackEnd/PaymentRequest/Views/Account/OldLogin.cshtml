@using PaymentRequest.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesion";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form", novalidate = "" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />

        <div class=" card-box">
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Correo electrónico", @required = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    <i class="md md-account-circle form-control-feedback l-h-34"></i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "", @placeholder = "Contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <i class="md md-vpn-key form-control-feedback l-h-34"></i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    <div class="checkbox checkbox-primary">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @id = "checkbox-signup" })
                        <label for="checkbox-signup">
                            Recuerdame
                        </label>
                    </div>

                </div>
            </div>


            <div class="form-group text-right m-t-20">
                <div class="col-xs-12">
                    <button class="btn btn-primary btn-custom w-md waves-effect waves-light btn-block" type="submit">
                        Iniciar sesion
                    </button>
                </div>
            </div>

            <div class="form-group m-t-30">
                <div class="col-sm-7">
                    <a href="@Url.Action("ForgotPassword")" class="text-muted">
                        <i class="fa fa-lock m-r-5"></i> Olvidó su contraseña
                    </a>
                </div>
                <div class="col-sm-5 text-right">
                    <a href="@Url.Action("Register")" class="text-muted">Crear cuenta</a>
                </div>
            </div>
        </div>
    }
</section>




@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
