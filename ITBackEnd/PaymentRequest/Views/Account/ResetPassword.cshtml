@model PaymentRequest.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Solicitud de Pago</h4>
        </div>
    </div>
</div>

<div class="wrapper-page panel panel-default">

    <div class="panel-heading">
        <h4>Restablezca su Contraeña</h4>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", data_parsley_validate = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control", @placeholder = "Cédula de Identidad", required = "", data_parsley_trigger = "change", data_parsley_type = "integer" })
                    <i class="md md-account-circle form-control-feedback l-h-34"></i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "", @placeholder = "Contraseña", data_parsley_length = "[8, 16]", data_parsley_trigger = "change" })
                    <i class="md md-vpn-key form-control-feedback l-h-34"></i>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "", @placeholder = "Confirmar Contraseña", data_parsley_equalto = "#Password", data_parsley_equalto_message = "Las contraseñas deben coincidir", data_parsley_length = "[8, 16]", data_parsley_trigger = "change" })
                    <i class="md md-vpn-key form-control-feedback l-h-34"></i>
                </div>
            </div>
            <div class="form-group text-right m-t-20">
                <div class="col-xs-12">
                    <button class="btn btn-block btn-primary btn-custom w-md waves-effect waves-light" type="submit">
                        Restablecer
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<!-- Parsleyjs -->
<script type="text/javascript" src="~/plugins/parsleyjs/dist/parsley.min.js"></script>
<script src="~/plugins/parsleyjs/dist/i18n/es.js"></script>
