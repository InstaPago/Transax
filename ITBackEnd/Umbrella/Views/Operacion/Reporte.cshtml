    decimal capital = (Variables.Where(u => u.Descripcion.Contains("Activos")).Sum(u => u.Monto) - Variables.Where(u => u.Descripcion.Contains("Pasivos")).Sum(u => u.Monto) - (Model.Monto * Dolar.FirstOrDefault().Tasa));
