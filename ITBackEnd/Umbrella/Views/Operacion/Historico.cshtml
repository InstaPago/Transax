                          if (r.success) {

                              toastr.success("Valores guardados con exito!", 'Éxito!');
                              window.setTimeout(location.reload(), 4000);
                          } else {
                              // $.Notification.notify('error', 'top right', 'Error!', r.message)
                              toastr.error(r.message, 'Error!');
